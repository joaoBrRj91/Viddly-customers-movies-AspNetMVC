@model IEnumerable<viddly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="page-header">
        <h1>Customers the Viddly</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr class="info">
                    <th>
                        Name
                    </th>
                    <th>
                        Customer liked News ?
                    </th>
                    <th>
                        Discount Rate
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Nome, "Details", "Customer", new { customerId = item.Id }, null)
                        </td>
                        <td>
                            @if (item.IsSubscribedToNewsLetter)
                {
                                <span class="text-success">Yes</span>
                            }
                            else
                            {
                                <span class="text-warning">No</span>

                            }
                        </td>
                        <td>
                            @item.MembershipType.DiscountRate%
                        </td>
                    </tr>
                }

            </tbody>

            <tfoot></tfoot>

        </table>
    </div>
</div>